{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="../public/style.css"/>
{% endblock %}
{% block body %}



   
     <div class="container" style='margin-top: 5%; margin-bottom: 4%'>
        <h1 style="font-family: Helvetica" class="text-center">les fruits signés <i>Frutz</i></h1>
        <div class="row justify-content-center h-100" style='margin-top: 3%'>
        {% for key, product in products %} 
            
        <div class="col-4" style="width: 25rem; height: 100%; margin-top: 2.3%">
          <div class="card text-dark bg-light">
            <img class="card-img-top" src={{ asset('images/' ~ product.image) }} alt="image alt text here" style="height: 16rem">
            <div class="card-body ">
              <h5 class="card-title">{{ product.nom }}</h5>
              <p class="card-text text-left">Des {{ product.nom }} de trés bonne qualité, bien savoureux</p>
            </div>
            <div class="card-footer bg-info text-right text-danger">
            <a href={{url("product.detail", {'SLUG': product.slug})}} class="btn btn-outline-light btn-sm">visionner</a> <span>{{ product.prix }}€</span>
            </div>
          </div>
        </div>
            
        {% endfor %}
    </div>
        <div class="container">
    

    


	
{% endblock  %}

